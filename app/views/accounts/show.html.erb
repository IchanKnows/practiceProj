
<h2 align="center"><%= @account.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<h4 class="center description"><strong>Motto:</strong></h4>
	<hr>
	<%= simple_format(@account.motto) %>
	<div class="account-actions">
		<%= link_to "Edit this account", edit_account_path(@account), class: "btn btn-xs btn-primary" %>
		<%= link_to "Delete this account", account_path(@account), method: :delete,
		data: { confirm: "Are you sure you want to delete this account?"},
		class: "btn btn-xs btn-danger" %>
		<%= link_to "View all accounts", accounts_path, class: "btn btn-xs btn-success" %>
	</div>
</div> 
