<%= form_for @account do |f| %>
	<p>
		<%= f.label :name %> <br/>
		<%= f.text_field :name %> <br/> 
	</p>
	<p>
		<%= f.label :motto %> <br/>
		<%= f.text_area :motto %> <br/> 
	</p>
	<p>
		<%= f.submit %>
	</p>

<% end %>
<% if @account.errors.any? %>
	<h1>account cannot be created due to ff:</h1>
	<ul>
		<% @account.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
<% end %>
<%= link_to 'accounts list', accounts_path %>