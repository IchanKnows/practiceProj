<%= form_for(@account, :html => {class: "form-horizontal", role: "form"}) do |f| %>
	<div class="form-group">
		<div class="control-label col-sm-2">
			<%= f.label :name %> 
		</div>
		<div class="col-sm-8">
			<%= f.text_field :name, class: "form-control", placeholder: "account name", autofocus: true %> 
		</div>
				
	</div>

	<div class="form-group">
		<div class="control-label col-sm-2">
			<%= f.label :motto %>
		</div>
		<div class="col-sm-8">
			<%= f.text_area :motto, rows: 10, class: "form-control", placeholder: "your motto" %> 
		</div>			
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit class: 'btn btn-primary btn-lg' %>
		</div>	
	</div>
<% end %>

<div class="col-xs-4 col-xs-offset-4">
	[ <%= link_to 'Cancel request and return to accounts list', accounts_path %> ]
</div>

<div class="col-sm-offset-2 col-sm-10">
	<% if @account.errors.any? %>
		<h2>account cannot be created/updated due to ff:</h2>
			<ul>
			<% @account.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
			<% end %>
			</ul>
	<% end %>
</div>

