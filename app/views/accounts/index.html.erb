<h1 align="center">Listing of all accounts </h1>
<% @accounts.each do |account| %>
<div class="row">
	<div class="col-xs-8 col-xs-offset-2">
		<div class="well well-lg">
			<div class="account-name">
				<%= link_to account.name, account_path(account) %>
			</div>
			<div class="account-body">
				<%= truncate(account.motto, length: 100) %>
				<div class="account-meta-details">
					<small>Created by: <%= account.user.username if account.user%>,
					<%= time_ago_in_words(account.created_at) %> ago,
					last updated: <%= time_ago_in_words(account.updated_at) %> ago</small>
				</div> 
			</div>
			<div class="account-actions">
				<%= link_to "Edit this account", edit_account_path(account), class: "btn btn-xs btn-primary" %>
				<%= link_to "Delete this account", account_path(account), method: :delete,
				data: { confirm: "Are you sure you want to delete the account?"},
				class: "btn btn-xs btn-danger" %>
			</div>
		</div>
	</div>
</div>
<% end %> 
